generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ====================================
//          Application Models
// ====================================

model Project {
  id          String   @id @default(cuid()) // CUID를 기본 ID로 사용
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  images      Image[] // 프로젝트에 속한 이미지 목록 (1:N 관계)
}

model Image {
  id          String   @id @default(cuid())
  name        String   // 원본 파일명
  mimeType    String   @default("application/octet-stream") // MIME 타입 (예: image/png, application/pdf)
  isImage     Boolean  @default(true) // 이미지 파일 여부
  size        Int      @default(0) // 파일 크기 (bytes)
  url         String?  // 비이미지 파일의 원본 URL (이미지는 variants에 URL 포함)
  variants    Json     @default("[]") // 처리된 이미지 버전 정보 배열 (이미지만 해당)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  projectId   String   // 이 파일이 속한 프로젝트의 ID (외래 키)
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade) // N:1 관계 정의, 프로젝트 삭제 시 파일도 삭제
}

model ApiKey {
  id             String    @id @default(cuid())
  keyHash        String    @unique // 해시된 API 키 값
  prefix         String    @unique // 키 식별용 접두사 (예: lmk_)
  userIdentifier String    // 키 소유자를 식별하는 값 (예: 사용자 ID, 이메일 등 - 세션에서 얻을 수 있는 고유 값)
  name           String?   // 사용자가 지정하는 키 이름 (선택 사항)
  createdAt      DateTime  @default(now())
  lastUsedAt     DateTime? // 마지막 사용 시각 (선택 사항)
  expiresAt      DateTime? // 만료 시각 (선택 사항)

  @@index([userIdentifier]) // userIdentifier로 검색 성능 향상
}